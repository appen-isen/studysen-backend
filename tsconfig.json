{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@routes/*": ["src/routes/*"]
    },
    "plugins": [
      {
      "transform": "typescript-transform-paths",
      },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ],
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "include": ["src/"],
}
